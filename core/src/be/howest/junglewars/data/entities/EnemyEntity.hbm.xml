<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="be.howest.junglewars.data.entities.EnemyEntity" table="enemies" schema="junglewars">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="textureFileName">
            <column name="textureFileName" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="baseDamage">
            <column name="baseDamage" sql-type="int(11)"/>
        </property>
        <property name="baseSpeed">
            <column name="baseSpeed" sql-type="int(11)"/>
        </property>
        <property name="baseHitpoints">
            <column name="baseHitpoints" sql-type="int(11)"/>
        </property>
        <property name="baseAttackSpeed">
            <column name="baseAttackSpeed" sql-type="float" precision="-1"/>
        </property>
        <property name="experienceWhenKilled">
            <column name="experienceWhenKilled" sql-type="int(11)"/>
        </property>
        <property name="scoreWhenKilled">
            <column name="scoreWhenKilled" sql-type="int(11)"/>
        </property>
        <property name="rarity">
            <column name="rarity" sql-type="int(11)"/>
        </property>
        <property name="targetSelection">
            <column name="targetSelection" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="attackTypes">
            <column name="attackTypes" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="movementType">
            <column name="movementType" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>